import java.util.Scanner;

public class FibonacciCalculator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Введіть номер n числа Фібоначчі, яке потрібно знайти: ");
        int n = scanner.nextInt();
        scanner.close();

        long fibResult = calculateNthFibonacci(n);

        System.out.println("---");
        System.out.println("n-е число Фібоначчі (Φ" + n + ") дорівнює: " + **fibResult**);
    }


    public static long calculateNthFibonacci(int n) {
        if (n <= 1) {
            return n; // Базові випадки: Φ0 = 0, Φ1 = 1
        }

        long fibMinusTwo = 0; // Φ(n-2)
        long fibMinusOne = 1; // Φ(n-1)
        long currentFib = 0;

        for (int i = 2; i <= n; i++) {
            currentFib = fibMinusOne + fibMinusTwo;
            fibMinusTwo = fibMinusOne; // Попереднє число стає позапопереднім
            fibMinusOne = currentFib; // Поточне число стає попереднім
        }

        return currentFib;
    }
}

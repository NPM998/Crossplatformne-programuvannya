import java.util.Scanner;

public class FactorialCalculator {


    public static long calculateFactorial(int n) {
        if (n == 0 || n == 1) {
            return 1;
        } 
        else {
            return n * calculateFactorial(n - 1);
        }
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Введіть невід'ємне ціле число для обчислення факторіалу: ");
        
        if (scanner.hasNextInt()) {
            int number = scanner.nextInt();
            if (number >= 0) {
                long result = calculateFactorial(number);
                System.out.println("Факторіал числа " + number + " дорівнює: " + result);
            } else {
                System.out.println("Будь ласка, введіть невід'ємне число.");
            }
        } else {
            System.out.println("Неправильний ввід. Будь ласка, введіть ціле число.");
        }
        
        scanner.close();
    }
}

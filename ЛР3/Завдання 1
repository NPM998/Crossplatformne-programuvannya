import java.util.Arrays;
import java.util.Random;

public class OctalDigits {

    public static void fillArrayWithRandoms(int[] array, int min, int max) {
        Random random = new Random();
        for (int i = 0; i < array.length; i++) {
            array[i] = random.nextInt(max - min + 1) + min;
        }
    }

    public static int countOctalDigits(int number) {
        if (number == 0) {
            return 1;
        }
        number = Math.abs(number);
        String octalString = Integer.toOctalString(number);
        return octalString.length();
    }

    public static int findNumberWithMaxOctalDigits(int[] array) {
        if (array == null || array.length == 0) {
            throw new IllegalArgumentException("Масив не може бути порожнім або null");
        }

        int numberWithMaxDigits = array[0];
        int maxDigitsCount = countOctalDigits(array[0]);

        for (int i = 1; i < array.length; i++) {
            int currentDigitsCount = countOctalDigits(array[i]);
            if (currentDigitsCount > maxDigitsCount) {
                maxDigitsCount = currentDigitsCount;
                numberWithMaxDigits = array[i];
            }
        }

        return numberWithMaxDigits;
    }

    public static void main(String[] args) {
        int arraySize = 20;
        int minRange = -1000;
        int maxRange = 1000;
        int[] numbers = new int[arraySize];

        fillArrayWithRandoms(numbers, minRange, maxRange);
        System.out.println("Згенерований масив: " + Arrays.toString(numbers));

        int resultNumber = findNumberWithMaxOctalDigits(numbers);
        int resultDigitsCount = countOctalDigits(resultNumber);

        System.out.println("\nЧисло з найбільшою кількістю розрядів у 8-ій системі числення: " + resultNumber);
        System.out.println("Кількість розрядів у 8-ій системі (для числа " + resultNumber + "): " + resultDigitsCount);
        System.out.println("Вісімкове представлення: " + Integer.toOctalString(resultNumber));
    }
}

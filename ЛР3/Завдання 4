import java.util.Scanner;
import java.lang.Math;

public class NumberComparator {

    public static int findSmallerNumber(int a, int b) {
        return (a < b) ? a : b;
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Будь ласка, введіть перше ціле число:");
        int num1 = scanner.nextInt();

        System.out.println("Будь ласка, введіть друге ціле число:");
        int num2 = scanner.nextInt();

        int smaller = findSmallerNumber(num1, num2);

        System.out.println("Менше з двох чисел: " + smaller);

        scanner.close();
    }
}

